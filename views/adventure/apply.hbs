{{> adventureProfile}}

<section id="user-overview-section" class="sec flex-clm-center">
  {{> adventureSubmenu}}

    <div id="" class="applyClass">
      <h3>Select your character:

      <form action="/adventure/{{adventure._id}}/apply" method="post" id="applyForm">
      <select name="characterId">
            <option value="">No Character</option>
            {{#each user.characters}}
            <option value="{{this._id}}">{{this.characterName}}</option>
            {{/each}}
      </select></h3>
        <textarea
          id="applyInput"
          name="message"
          type="text"
          placeholder="Here you can ask the game master to join the group and be part of the adventure."
      /></textarea>
     

        <button class="filterButton skipLink">Apply</button>
        
      </form>

    </div>
</section>